@model Project
<div class="d-flex justify-evenly">
    <div class="container w-75 mx-auto">
    <h2 class="text-center">New Project</h2>

    <form class="shadow p-3 rounded" asp-controller="Project" asp-action="Create" method="POST">
        <div class="mb-3">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger font-weight-bold">
            </span>
            <input class="form-control" asp-for="Name" />
        </div>
                <div class="mb-3">
            <label asp-for="Goal"></label>
            <span asp-validation-for="Goal" class="text-danger font-weight-bold">
            </span>
            <input class="form-control" asp-for="Goal" />
        </div>
                <div class="mb-3">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger font-weight-bold">
            </span>
            <input class="form-control" asp-for="Description" />
        </div>
                <div class="mb-3">
            <label asp-for="EndDate"></label>
            <span asp-validation-for="EndDate" class="text-danger font-weight-bold">
            </span>
            <input class="form-control" asp-for="EndDate" />
        </div>

        <button class="btn btn-success">Submit</button>
    </form>

</div>